<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    app:cardCornerRadius="@dimen/category_corner_radius"
    app:cardElevation="@dimen/category_elevation">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/category_round"
            android:layout_height="@dimen/category_round"
            android:padding="20dp"
            tools:src="@drawable/phone"
            app:tint="@color/category_inactive"/>


</androidx.cardview.widget.CardView>